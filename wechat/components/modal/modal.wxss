/* components/modal/modal.wxss */

.tc {
  text-align: center;
}

.w50 {
  width: 50%;
}

.bluebtn {
  color: #fff;
  background: #00a0e8;
}

.modal {
  position: fixed;
  z-index: 100;
  left: 0;
  top: 0;
  width: 100%;
  height: 100vh;
  overflow-y: scroll;
  background: rgba(0, 0, 0, 0.7);
}

.modal-content {
  box-sizing: border-box;
  width: 80%;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40%;
  overflow: hidden;
  border-radius: 10rrpx;
  background: #fff;
}

.head {
  padding: 0 20rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #ddd;
}

.foot {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  line-height: 80rpx;
}

.foot .bluebtn {
  height: 80rpx;
  border-radius: 0;
}
